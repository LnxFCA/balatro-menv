{
  "$schema": "https://raw.githubusercontent.com/LuaLS/vscode-lua/master/setting/schema.json",
  "runtime": {
    "version": "LuaJIT"
  },
  "workspace": {
    "library": [
      "love2d-dev",
      "balatro",
      "smods/src",
      "balatro-dev",
      "smods-dev"
    ],
    "ignoreDir": [
      ".vscode",
      "balatro/localization",
      "balatro/resources",
      "lovely",
      "smods/lsp_def"
    ]
  },
  "diagnostics": {
    "disable": [
      "lowercase-global"
    ]
  },
  "type": {
    "weakUnionCheck": true
  }
}
